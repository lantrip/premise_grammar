{
  "name": "premise",
  "displayName": "Premise Language Support",
  "description": "Syntax highlighting and theming for Premise story files",
  "version": "1.0.0",
  "publisher": "premise-lang",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages",
    "Themes"
  ],
  "keywords": [
    "premise",
    "story",
    "screenplay",
    "narrative"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/davidlantrip/premise-grammar"
  },
  "contributes": {
    "languages": [
      {
        "id": "premise",
        "aliases": [
          "Premise",
          "premise"
        ],
        "extensions": [
          ".prem"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "premise",
        "scopeName": "source.premise",
        "path": "./syntaxes/premise.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "Premise Screenplay",
        "uiTheme": "vs",
        "path": "./themes/premise-screenplay.json"
      },
      {
        "label": "Premise Novel",
        "uiTheme": "vs",
        "path": "./themes/premise-novel.json"
      },
      {
        "label": "Premise Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/premise-dark.json"
      }
    ]
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:premise"
  ],
  "scripts": {
    "compile": "tsc -p ./ --listEmittedFiles false",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/emscripten": "^1.41.2",
    "@types/node": "^16.0.0",
    "@types/vscode": "^1.60.0",
    "typescript": "^4.4.0"
  },
  "dependencies": {
    "web-tree-sitter": "^0.25.9"
  }
}
